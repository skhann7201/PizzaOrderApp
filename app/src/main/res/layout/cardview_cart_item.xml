<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Pizza Image -->
        <ImageView
            android:id="@+id/img_pizza"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/chicago_style_bt" />

        <!-- Pizza Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Pizza Style -->
            <TextView
                android:id="@+id/tv_pizza_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicago Style Pizza"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Pizza Type -->
            <TextView
                android:id="@+id/tv_pizza_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Deluxe"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Pizza Size -->
            <TextView
                android:id="@+id/tv_pizza_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Size: Medium"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Toppings -->
            <TextView
                android:id="@+id/tv_pizza_toppings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Toppings: Pepperoni, Mushrooms"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <!-- Price -->
            <TextView
                android:id="@+id/tv_pizza_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Price: $12.99"
                android:textColor="@color/primary_red"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Remove Button -->
        <ImageButton
            android:id="@+id/btn_remove"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="Remove Pizza"
            android:src="@android:drawable/btn_dialog" />

    </LinearLayout>
</androidx.cardview.widget.CardView>