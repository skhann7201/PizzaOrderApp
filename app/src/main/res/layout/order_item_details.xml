<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_pizza"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pizza_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicago Style Pizza"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pizza_type_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type: Deluxe"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pizza_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: Medium"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pizza_toppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toppings: Mushrooms, Pepperoni"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pizza_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $12.99"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
