<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_pizza"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/pizza_image_description"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pizzeria_splash" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pizza_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pizza_style"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pizza_crust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pizza_crust"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pizza_type_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pizza_type_size"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pizza_toppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pizza_toppings"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pizza_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pizza_price"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>